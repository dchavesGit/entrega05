<div class="d-flex flex-column justify-content-center align-items-center">
  <h1>PRODUCTOS DISPONIBLES: </h1>
  <br />
  <p id="cartId">{{this.cartId}}</p>
  {{#each payload}}
    <div class="card m-2" style="width: 18rem;">
      {{!-- <img src="{{this.thumbnail}}" class="card-img-top" alt="..." /> --}}
      <div class="card-body">
        <a href="/products/{{this._id}}">
          <h5 class="card-title">{{this.title}}</h5></a>
        <h4 class="card-title">Unidades: {{this.stock}}</h4>
        <p class="card-text">
          {{this.description}}
        </p>
        <div>
          <button class="btn btn-primary add" id="p_add_{{this._id}}">Agregar al
            carrito</button>
        </div>
      </div>
    </div>
  {{/each}}
  <div>
    <h1>Pagina:{{page}} de {{totalPages}}</h1>
    {{#if hasPrevPage}}
      <a href="/products?page={{prevPage}}&limit=5"><button
          class="btn btn-primary"
        >Anterior</button></a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="/products?page={{nextPage}}&limit=5"><button
          class="btn btn-primary"
        >Siguiente</button></a>
    {{/if}}
  </div>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
  crossorigin="anonymous"
></script>
<script src="/js/products.js"></script>